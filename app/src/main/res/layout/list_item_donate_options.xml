<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/donate_list_item_height"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:padding="@dimen/global_spacing">

    <ImageView
        android:id="@+id/lido_iv_option_icon"
        android:layout_width="@dimen/donate_list_item_icon_size"
        android:layout_height="@dimen/donate_list_item_icon_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:tint="@color/color_on_surface_high"
        tools:src="@drawable/ic_twitter"/>

    <TextView
        android:id="@+id/lido_tv_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/global_margin_full"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lido_tv_option_subtitle"
        app:layout_constraintStart_toEndOf="@id/lido_iv_option_icon"
        style="@style/TextAppearance.Treble.Subtitle2"
        tools:text="Hello" />

    <TextView
        android:id="@+id/lido_tv_option_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/global_margin_full"
        app:layout_constraintTop_toBottomOf="@id/lido_tv_option_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/lido_iv_option_icon"
        style="@style/TextAppearance.Treble.Caption"
        tools:text="Hello" />

</androidx.constraintlayout.widget.ConstraintLayout>
